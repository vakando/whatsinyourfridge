<resources>
    <style name="Default" parent="Theme.AppCompat.Light" />

    <style name="Blue" parent="Theme.AppCompat.Light">
        <item name="android:navigationBarColor">@color/theme_darkblue_5</item>
        <item name="colorPrimary">@color/theme_darkblue_1</item>
        <item name="colorPrimaryDark">@color/theme_darkblue_2</item>
        <item name="colorAccent">@color/theme_darkblue_3</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="actionBarStyle">@style/BlueBar</item>
    </style>

    <style name="Red" parent="Theme.AppCompat.Light" >
        <item name="colorPrimary">@color/theme_darkred_4</item>
        <item name="colorPrimaryDark">@color/theme_darkred_2</item>
        <item name="colorAccent">@color/theme_darkred_3</item>
        <item name="android:navigationBarColor">@color/theme_darkred_3</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="actionBarStyle">@style/RedBar</item>
    </style>

    <style name="Black" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/theme_black_1</item>
        <item name="colorAccent">@color/theme_black_3</item>
        <item name="colorPrimaryDark">@color/theme_black_2</item>
        <item name="android:navigationBarColor">@color/theme_black_5</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="BlueBar" parent="@android:style/Widget.ActionBar">
        <item name="background">@color/theme_darkblue_2</item>
    </style>

    <style name="RedBar" parent="@android:style/Widget.ActionBar">
        <item name="background">@color/theme_darkred_5</item>
    </style>

</resources>
