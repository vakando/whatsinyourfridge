<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Blue" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorBackground">@color/theme_darkblue_5</item>
        <item name="android:navigationBarColor">@color/theme_darkblue_2</item>
        <item name="android:colorPrimary">@color/theme_darkblue_1</item>
        <item name="android:colorPrimaryDark">@color/theme_darkblue_2</item>
        <item name="android:colorAccent">@color/theme_darkblue_3</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:actionBarStyle">@style/BlueBar</item>
    </style>

    <style name="Red" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="android:colorPrimary">@color/theme_darkred_1</item>
        <item name="android:colorPrimaryDark">@color/theme_darkred_2</item>
        <item name="android:colorAccent">@color/theme_darkred_3</item>
        <item name="android:colorBackground">@color/theme_darkred_4</item>
        <item name="android:navigationBarColor">@color/theme_darkred_5</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:actionBarStyle">@style/RedBar</item>
    </style>

    <style name="Black" parent="Theme.AppCompat">
        <item name="android:colorPrimary">@color/theme_black_1</item>
        <item name="android:colorBackground">@color/theme_black_4</item>
        <item name="android:colorAccent">@color/theme_black_3</item>
        <item name="android:colorPrimaryDark">@color/theme_black_2</item>
        <item name="android:navigationBarColor">@color/theme_black_5</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="BlueBar" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@color/theme_darkblue_1</item>
    </style>

    <style name="RedBar" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@color/theme_darkred_1</item>
    </style>

    <style name="DefaultBar" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

</resources>