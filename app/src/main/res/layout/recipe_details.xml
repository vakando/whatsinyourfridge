<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android" >

   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/test1"
    android:layout_height="wrap_content"
       android:paddingTop="@dimen/activity_vertical_margin"
       android:paddingBottom="@dimen/activity_vertical_margin"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:weightSum="1"
        android:layout_weight="1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recipeImage"
            android:layout_gravity="top"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true" />

    </LinearLayout>

       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textAppearance="?android:attr/textAppearanceMedium"
               android:id="@+id/recipeTitle"
               android:layout_gravity="center_horizontal"
               android:layout_weight="1"
               android:paddingTop="10dp"
               android:paddingLeft="5dp"
               android:paddingRight="5dp"
               android:textAlignment="center"
               android:textColor="@color/recipeTitle" />

           <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/fav_0_button"
            android:background="@mipmap/fav_0"
            android:layout_gravity="top"
            android:layout_marginRight="15dp"
               android:layout_marginTop="5dp" />
       </LinearLayout>

       <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="  Ingredients : "
            android:id="@+id/textView_ingredients"
            android:textColor="@color/ingTitle"
            android:textSize="14dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/ingredientsText"
            android:textSize="16dp"
            android:textColor="@color/textDescription" />

       </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="  Preparation : "
            android:id="@+id/textView_preparation"
            android:textColor="@color/ingTitle"
            android:textSize="14dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/preparationText"
            android:textColor="@color/textDescription"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.70"
            android:layout_gravity="center_horizontal">

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/addToShoppingButton"
                android:src="@mipmap/add_list"
                android:background="#628ef7"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="114dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Add to shopping list"
                android:id="@+id/textView4"
                android:textColor="@color/blueButton"
                android:paddingTop="5dp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:weightSum="1">

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/addToCalendarButton"
                android:src="@mipmap/add_calendar"
                android:background="#628ef7"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="101dp"
                android:layout_height="85dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/addCalendar"
                android:id="@+id/textView5"
                android:textColor="#628ef7"
                android:paddingTop="5dp"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>


   </LinearLayout>

</ScrollView>